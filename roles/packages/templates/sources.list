# Main repository
deb http://deb.debian.org/debian/ {{ system.release }} {{ sections }}
deb-src http://deb.debian.org/debian/ {{ system.release }} {{ sections }}

# Security updates
deb http://security.debian.org/debian-security {{ system.release }}-security main contrib non-free
deb-src http://security.debian.org/debian-security {{ system.release }}-security main contrib non-free

# {{ system.release }}-updates, previously known as 'volatile'
deb http://deb.debian.org/debian/ {{ system.release }}-updates {{ sections }}
deb-src http://deb.debian.org/debian/ {{ system.release }}-updates {{ sections }}

# Uncomment to activate backports
# {{ system.release }}-backports, previously on backports.debian.org
# deb http://deb.debian.org/debian/ {{ system.release }}-backports {{ sections }}
# deb-src http://deb.debian.org/debian/ {{ system.release }}-backports {{ sections }}
