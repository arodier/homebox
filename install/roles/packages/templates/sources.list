# Main repository
deb http://deb.debian.org/debian/ {{ system.release }} main non-free contrib
deb-src http://deb.debian.org/debian/ {{ system.release }} main non-free contrib

# Security updates
# deb http://security.debian.org/ {{ system.release }}/updates main contrib non-free
# deb-src http://security.debian.org/ {{ system.release }}/updates main contrib non-free

# {{ system.release }}-updates, previously known as 'volatile'
deb http://deb.debian.org/debian/ {{ system.release }}-updates main contrib non-free
deb-src http://deb.debian.org/debian/ {{ system.release }}-updates main contrib non-free

# {{ system.release }}-backports, previously on backports.debian.org
deb http://deb.debian.org/debian/ {{ system.release }}-backports main contrib non-free
deb-src http://deb.debian.org/debian/ {{ system.release }}-backports main contrib non-free
